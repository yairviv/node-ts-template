{
    "name": "microservicetemplate",
    "version": "0.2.0",
    "description": "Template MS",
    "main": "./src/server.ts",
    "scripts": {
        "debug": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,green.bold\" \"npm run watch-tsc\" \"npm run watch-node\"",
        "start": "npm run serve",
        "serve": "node dist/server.js",
        "serve-debug": "nodemon --inspect dist/server.js",
        "watch-node": "nodemon dist/server.js",
        "build": "tsc",
        "tsc": "tsc",
        "watch-tsc": "tsc -w",
        "prettier": "prettier --list-different './src/**/*.ts'",
        "clean": "rimraf dist",
        "test": "jest --coverage",
        "lint": "tslint -c tslint.json -p tsconfig.json"
    },
    "author": "Yair",
    "license": "Apache-2.0",
    "dependencies": {
        "class-transformer": "^0.2.3",
        "class-validator": "^0.12.2",
        "class-validator-jsonschema": "^2.0.3",
        "dotenv": "^4.0.0",
        "eslint": "^5.9.0",
        "express": "^4.16.4",
        "jest-junit": "^5.2.0",
        "mongoose": "^5.5.11",
        "reflect-metadata": "^0.1.13",
        "routing-controllers": "^0.9.0-alpha.6",
        "routing-controllers-openapi": "^2.0.1",
        "typescript": "^4.1.3"
    },
    "devDependencies": {
        "@types/dotenv": "^4.0.3",
        "@types/express": "^4.16.0",
        "@types/jest": "^23.3.10",
        "@types/mongoose": "^5.5.3",
        "@types/node": "^10.11.4",
        "@types/supertest": "^2.0.6",
        "automapper-ts": "^1.9.0",
        "concurrently": "^4.0.1",
        "husky": "^1.1.1",
        "jest": "^23.6.0",
        "lint-staged": "^7.3.0",
        "nodemon": "^1.18.0",
        "prettier": "^1.14.0",
        "rimraf": "^2.6.2",
        "supertest": "^3.3.0",
        "ts-jest": "^23.10.4",
        "tslint": "^5.11.0",
        "tslint-config-airbnb": "^5.11.0",
        "tslint-config-prettier": "^1.15.0"
    },
    "jest-junit": {
        "suiteName": "jest tests",
        "outputDirectory": ".",
        "outputName": "./build/reports/junit.xml",
        "classNameTemplate": "{classname}-{title}",
        "titleTemplate": "{classname}-{title}",
        "ancestorSeparator": " â€º ",
        "usePathForSuiteName": "true"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{ts,js,json,css,md}": [
            "prettier --write",
            "git add"
        ]
    }
}
